<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.jobslist.JobsListFragment">

    <TextView
        android:id="@+id/detailedJobNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Job name" />

    <ImageView
        android:id="@+id/detailedJobTypeImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/image_content_descriptor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedJobNameLabel"
        tools:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/detailedJobTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/detailedJobTypeImage"
        app:layout_constraintStart_toEndOf="@+id/detailedJobTypeImage"
        app:layout_constraintTop_toTopOf="@+id/detailedJobTypeImage"
        tools:text="Job type" />

    <ImageView
        android:id="@+id/detailedSurfaceImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/image_content_descriptor"
        app:layout_constraintStart_toEndOf="@id/detailedJobTypeLabel"
        app:layout_constraintTop_toBottomOf="@+id/detailedJobNameLabel"
        tools:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/detailedSurfaceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/detailedSurfaceImage"
        app:layout_constraintStart_toEndOf="@+id/detailedSurfaceImage"
        app:layout_constraintTop_toTopOf="@+id/detailedSurfaceImage"
        tools:text="Surface" />

    <TextView
        android:id="@+id/detailedJobPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic|bold"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/detailedSurfaceImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailedSurfaceImage"
        tools:text="Price"/>

    <Button
        android:id="@+id/workflowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workflow_label"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedSurfaceImage" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailedNeededResourcesPlace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@drawable/list_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workflowButton">

        <TextView
            android:id="@+id/detailedNeededResourcesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/needed_resources_label"
            android:textStyle="bold|italic"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detailedResourcesList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailedNeededResourcesLabel" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>